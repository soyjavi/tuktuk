// Based on Kushagra Gour with HINT.css
// http://kushagragour.in/lab/hint/

@import "__constants.styl"

TIP_COLOR = rgba(0,0,0,0.75)

[data-tip]
  position: relative
  display: inline-block

  &:before, &:after
    position: absolute
    opacity: 0
    z-index: 1000000
    pointer-events: none
    transition all 300ms
  &:before
    content: ''
    position: absolute
    background: transparent
    border: 6px solid transparent
    z-index: 1000001
  &:after
    content: attr(data-tip)
    background: TIP_COLOR
    color: white
    text-shadow: 0 -1px 0px black
    padding: 8px 10px
    font-size: 13px
    line-height: 13px
    font-weight: 600
    white-space: nowrap
    box-shadow: 0 0 8px rgba(0, 0, 0, 0.25)
  &:hover:before, &:hover:after
    opacity: 1

  &:not(.tip-top):not(.tip-right):not(.tip-left)
    &:before
      border-bottom-color: TIP_COLOR
      margin-top: -12px
    &:after
      margin-left: -18px
    &:before, &:after
      top: 100%
      left: 50%
    &:hover:before, &:hover:after
      transform translateY(8px)

  &.tip-top
    &:before
      border-top-color: TIP_COLOR
      margin-bottom: -12px
    &:after
      margin-left: -18px
    &:before, &:after
      bottom: 100%
      left: 50%
    &:hover:before, &:hover:after
      transform translateY(-8px)

  &.tip-left
    &:before
      margin-right: -12px
      margin-bottom: -6px
      border-left-color: TIP_COLOR
    &:after
      margin-bottom: -14px
    &:before, &:after
      right: 100%
      bottom: 50%
    &:hover:before, &:hover:after
      transform translateX(-8px)

  &.tip-right
    &:before
      margin-left: -12px
      margin-bottom: -6px
      border-right-color: TIP_COLOR
    &:after
      margin-bottom: -14px
    &:before, &:after
      left: 100%
      bottom: 50%
    &:hover:before, &:hover:after
      transform translateX(8px)
