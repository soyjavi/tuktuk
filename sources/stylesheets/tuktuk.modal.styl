@import "__constants.styl"


[data-tuktuk="modal"]
  position: fixed
  left: 50%
  background: #fff
  transition all 250ms

  transform translateY(-100%)
  visibility: hidden
  z-index: 1983

  & header
    padding: (AIR / 1.9) AIR

  & article, footer
    padding: (AIR / 1.5) AIR

  & article
    box-flex(1)
    & [class^="column_"]
      margin: 0 !important

  &.active
    top: 5%
    transform translateY(0%)
    visibility: visible

  &:not(.side)
    WIDTH = 288px
    margin-top: 0 !important
    margin-right: 0 !important

    &.column_5
      WIDTH = 368px
      margin-left: -(WIDTH / 2)
    &.column_6
      WIDTH = 448px
      margin-left: -(WIDTH / 2)
    &.column_7
      WIDTH = 528px
      margin-left: -(WIDTH / 2)
    &.column_8
      WIDTH = 608px
      margin-left: -(WIDTH / 2)
    &.column_9
      WIDTH = 688px
      margin-left: -(WIDTH / 2)
    &.column_10
      WIDTH = 768px
      margin-left: -(WIDTH / 2)
    &.column_11
      WIDTH = 848px
      margin-left: -(WIDTH / 2)
    &.column_12
      WIDTH = 928px
      margin-left: -(WIDTH / 2)

  &
    width: 288px
  &.column_5
    width: 368px
  &.column_6
    width: 448px
  &.column_7
    width: 528px
  &.column_8
    width: 608px
  &.column_9
    width: 688px
  &.column_10
    width: 768px
  &.column_11
    width: 848px
  &.column_12
    width: 928px

  &.side
    position: absolute
    display-box()
    box-orient(vertical)
    top: 0
    right: 0
    bottom: 0
    left: auto
    margin: 0
    transform translateX(100%)
    &.active
      transform translateX(0%)

    & > div
      width: 100%
      height: 100%
      display-box()
      box-orient(vertical)


@media only screen and (max-width: 528px)
  [data-tuktuk="modal"]
    left: 5% !important
    width: w = 90% !important
    margin-left: 0 !important

[data-tuktuk="lock"]
  display: none
  width: 100%
  height: 100%
  position: fixed
  top: 0
  bottom: 0
  left: 0
  z-index: 1980
  opacity: 0
  transition all 250ms
  visibility: hidden

  &.active
    opacity: 1
    visibility: visible
    &:not([data-active=true])
      background: rgba(0,0,0,0.8)
    &[data-loading=true]
      background: rgba(0,0,0,0)
      & > .loading
        display: block
        & > .container
          -webkit-animation: loading 600ms  infinite linear
          moz-animation:  loading 600ms  infinite linear
          animation:  loading 600ms  infinite linear

  & > .loading
    SIZE: 128px
    display: none
    position: fixed
    left: 50%
    top: 50%
    width: SIZE
    height: SIZE
    margin-left: -64px
    margin-top: -64px
    padding: 28px
    background-color: rgba(0,0,0,0.75)

    & > .container
      SIZE = 64px
      height: 1em
      width: 1em
      transform-origin .5em .5em
      font-size: SIZE
