@import "__vendor.styl"

/* ====================== FONT-FACE ====================== */
@import url("http://fonts.googleapis.com/css?family=Source+Sans+Pro:200,300,400,700")
color = #16A6B6
color_secondary = #BFBFBF
color_cancel = #EE6557
color_accept = #3FB58E


body
  color: #000
  font-size: 1em
  line-height: 1.2
  font-family: "Source Sans Pro"
  font-weight: 300

  & > header
    &.solid
      background: #111
    & nav a
      color: rgba(255,255,255,0.5)
      &:hover, &:active
        color: #fff

  & > section
    &.underline
      border-bottom: solid #bbb 1px


  /* ====================== NAVIGATION ====================== */
  & nav
    &.group a
      border-left: solid #ccc 1px
      &, & > .icon
        color: #888
      &:hover, &:active, &.active
        color: #000
        background: white
        & > .icon
          color: #000
      &:last-child
        border-right: solid #ccc 1px

  /* ====================== BACKGROUNDS ====================== */
  & .bck
    &.lightest
      background-color: #fff
    &.light
      background-color: #f7f7f7
    &.dark
      background-color: #282828
    &.darkest
      background-color: #181818
    &.theme
      background-color: color
    &.accept
      background-color: color_accept
    &.cancel
      background-color: color_cancel

  /* ====================== TEXT ====================== */
  & .text
    &.shadow
      text-shadow 0 1px 1px rgba(0,0,0,0.5)
    &.color
      &.white
        color: #fff
      &.theme
        color: color
      &.secondary
        color: color_secondary
      &.accept
        color: color_accept
      &.cancel
        color: color_cancel


  /* ====================== FORM ====================== */
  & form, .form
    & input[type="text"], input[type="password"], input[type="date"], input[type="datetime"], input[type="email"], input[type="number"], input[type="search"], input[type="tel"], input[type="time"], input[type="url"], select, textarea
      background-color: white
      color: rgba(0, 0, 0, 0.75)
      border: 1px solid #ddd
      box-shadow inset 0 1px 2px rgba(0, 0, 0, 0.1)
      &.error, &:required
        border-color: color_cancel
        color: color_cancel
        background-color: rgba(198, 15, 19, 0.1)
      &:focus
        background: #FAFAFA;
        border-color: #B3B3B3;
        color: rgba(0, 0, 0, 0.75)

  /* ====================== TABLE ====================== */
  & table
    background: #fff
    color: #333
    border: 1px solid #ddd;
    border-radius 3px
    & tr
      &:nth-child(even) td
        background-color: #F9F9F9
    & th
      background-color: #eee
      color: #222
    & td
      &.highlight
        background-color: color !important
        color: #fff

  /* ====================== BUTTONS ====================== */
  & .button, button
    background-color: color
    color: white
    border-radius 1px
    box-shadow inset 0 1px 0 rgba(255,255,255,0.2)
    border: solid 1px rgba(0,0,0,0.1)
    &:active
      box-shadow inset 0 0 128px rgba(0,0,0,0.25)
      border-color: none
    &.secondary
      background-color: color_secondary
      color: #666
      text-shadow: 0 1px 0 rgba(255,255,255,0.25)
    &.accept
      background-color: color_accept
    &.cancel
      background-color: color_cancel
    &.transparent
      background: none !important


  /* ====================== BUTTONS ====================== */
  & :not(nav) > a:not(.button)
    color: color
    opacity: 0.9
    &:hover, &:active
      opacity: 1.0
