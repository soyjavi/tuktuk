.thumb
  margin-bottom: 24px
  & > .preview
    width: 100%
    height: 160px
    background: #ddd
  & > a
    display: block
    padding: 4px
    line-height: 16px
    font-size: 0.8em

    & > .avatar
      width: 16px
      height: 16px
      margin-right: 2px

.last
  & h5
    margin-bottom: 8px

  & .avatar
    width: size = 41px
    height: size
    &.border
      border: 1px solid none
      &:hover
        border: 1px solid red


.list_avatar
  & > li
    height: 41px
    margin-bottom: 4px
    line-heigth: 32px
    & > img
      margin-right: 8px

.promotioned
  font-size: 1.2em
  .preview
    width: 100%
    height: 340px

  & .author
    line-height: 32px
    margin: 6px 0 12px 0
    & .avatar
      width: 32px
      border: 2px solid #fff
      margin-right: 6px

.form.search
  & input
    border: none !important
    box-shadow: none !important
    font-size: 1.8em
    height: auto
    padding: 12px 0 !important
    margin: 0 !important
